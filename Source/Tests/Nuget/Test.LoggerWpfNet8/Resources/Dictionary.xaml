<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  CSHAWKY RESOURCE FILE Last updated: 11 Feb 2025 for Sydney Water Colour Scheme  -->
    <!--  Window.Resources from https://learn.microsoft.com/en-us/answers/questions/723739/how-to-make-tabitems-fit-the-app-window-some-other  -->
    <!--  Colour Scheme  -->
    <SolidColorBrush x:Key="Background0" Color="#FF3361A0" />
    <SolidColorBrush x:Key="Background1" Color="#FF3F78C5" />
    <SolidColorBrush x:Key="Background2" Color="#FF77B8F5" />
    <SolidColorBrush x:Key="BackgroundG0" Color="#FF9A9A9A" />
    <SolidColorBrush x:Key="BackgroundG1" Color="#FFBDBDBD" />
    <SolidColorBrush x:Key="BackgroundG2" Color="#FFD6D6D6" />
    <SolidColorBrush x:Key="BackgroundT" Color="Transparent" />
    <SolidColorBrush x:Key="Border1" Color="#FF0032FD" />
    <SolidColorBrush x:Key="Border2" Color="#FF0032FD" />
    <SolidColorBrush x:Key="Text1" Color="Black" />
    <SolidColorBrush x:Key="Text0" Color="White" />
    <SolidColorBrush x:Key="TitleBar" Color="Gray" />

    <!--  Standardise on spacing for typical controls  -->
    <Style x:Key="BaseStyle1">
        <Setter Property="Control.Margin" Value="2,2,2,2" />
        <Setter Property="Control.Padding" Value="2,2,2,2" />
        <Setter Property="Control.Height" Value="Auto" />
        <Setter Property="Control.Width" Value="Auto" />
        <Setter Property="Control.FontSize" Value="16" />
    </Style>
    <Style x:Key="BaseStyle2" BasedOn="{StaticResource BaseStyle1}">
        <Setter Property="Control.VerticalAlignment" Value="Center" />
        <Setter Property="Control.VerticalContentAlignment" Value="Center" />
    </Style>

    <Style BasedOn="{StaticResource BaseStyle1}" TargetType="{x:Type Button}" />
    <Style BasedOn="{StaticResource BaseStyle1}" TargetType="{x:Type RadioButton}" />
    <Style BasedOn="{StaticResource BaseStyle1}" TargetType="{x:Type TabControl}" />
    <Style BasedOn="{StaticResource BaseStyle2}" TargetType="{x:Type TextBox}" />
    <Style BasedOn="{StaticResource BaseStyle2}" TargetType="{x:Type ComboBox}" />
    <Style BasedOn="{StaticResource BaseStyle1}" TargetType="{x:Type ListView}" />

    <Style BasedOn="{StaticResource BaseStyle2}" TargetType="{x:Type Label}">
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>
    <Style BasedOn="{StaticResource BaseStyle1}" TargetType="{x:Type CheckBox}">
        <Setter Property="Control.VerticalAlignment" Value="Center" />
        <Setter Property="Control.VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="SaveVisibility"
           BasedOn="{StaticResource BaseStyle1}"
           TargetType="{x:Type Button}">
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Model.IsSaveSettingsNeeded}" Value="False" />
                    <!--  add other AND conditions here  -->
                </MultiDataTrigger.Conditions>
                <Setter Property="IsEnabled" Value="False" />
            </MultiDataTrigger>
            <DataTrigger Binding="{Binding Model.IsSaveSettingsNeeded}" Value="True">
                <Setter Property="IsEnabled" Value="True" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>